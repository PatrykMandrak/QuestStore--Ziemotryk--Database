</nav>

<div id="pageInfo">
    <a href="../../../templates/admin/indexPage.twig"><img id="logoImage" src="../../IMAGES/logoCodecool.jpg" width="70" height="70"></a>
</div>
<div id="plusButton">
    <a href="addMentorPage.html"><img class="plusButton" src="../../IMAGES/plusButton.png" alt="logo"></a>
</div>

<div class="container">
    {% for mentor in list %}
    <ul class="item">
        <li class="avatarImage"><img class="avatar" src="../../IMAGES/leniartek.png" alt="Leniartek"></li>
        <li class="fullName">
            {{ mentor.getFullname() }}
        </li>
        <p class="heading">E-mail:</p>
        <li class="email">
            {{ mentor.getEmail() }}
        </li>
        <p class="heading">Class:</p>
        <li class="assignedClass">
            {{ mentor.getClassName() }}
        </li>
        <p class="heading">About:</p>
        <li class="about">
            {{ mentor.getAbout() }}
        </li>
        <li class="editButtonImage"><a href="editMentor.html"><img class="editButton" src="../../IMAGES/wrench.png"
                                                                   alt="edit"></a></li>
    </ul>
    {% endfor %}
</div>

</body>
