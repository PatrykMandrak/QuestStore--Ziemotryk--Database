<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add new mentor</title>
    <link rel="stylesheet" href="/static/CSS/flexboxStyle.css">
    <link rel="stylesheet" href="/static/CSS/IndexPageStyle.css">
    <link rel="stylesheet" href="/static/CSS/Admin/addMentorPage.css">
</head>
<body>

<nav role='navigation'>
    <div id="menuToggle">

        <input type="checkbox"/>

        <span></span>
        <span></span>
        <span></span>

        <ul id="menu">
            <a href="/quest/admin/index">
                <li>Home</li>
            </a>
            <a href="/quest/admin/mentors">
                <li>Mentors</li>
            </a>
            <a href="/quest/admin/classes">
                <li>Classes</li>
            </a>
            <a href="/quest/admin/levels">
                <li>Pilar of experience</li>
            </a>
            <a href="/quest/admin/logout">
                <li>Log out</li>
            </a>
        </ul>
    </div>
</nav>

<div id="pageInfo">
    <a href="/quest/admin/index"><img id="logoImage" src="/static/IMAGES/logoCodecool.jpg" alt="logo" width="70"
                                      height="70"></a>
</div>

<div class="container">
    <form id="addForm" method="POST" action="/quest/admin/addMentor"></form>
    <ul class="item">
        <li class="avatarImage">
            <img class="avatar" src="/static/IMAGES/mentors/emptyAvatar404.jpg" alt="Leniartek">
        </li>
        <li class="fullName">
            <input class="input" type="text" placeholder="Full name" form="addForm" name="fullName"/>

        </li>
        <p class="heading">E-mail:</p>
        <li class="email">
            <input class="input" type="text" placeholder="E-mail" form="addForm" name="email"/>
        </li>
        <p class="heading">Class:</p>
        <li class="assignedClass">
            <!--input class="input" type="text" placeholder="Assigned class" form="addForm" name="assignedClass"/-->
            <select  name="assignedClass" form="addForm">
                <option disabled selected value> -- select class -- </option>
                {% for class in list %}
                <option value="{{ class.getClassName() }}">{{ class.getClassName() }}</option>
                {% endfor %}
            </select>
        </li>
        <p class="heading">About:</p>
        <li class="about">
            <input class="input" type="text" placeholder="About" form="addForm" name="about"/>
        </li>
        <p class="heading">Login:</p>
        <li class="login">
            <input class="input" type="text" placeholder="Login" form="addForm" name="login"/>

        </li>
        <p class="heading">Password:</p>
        <li class="password">
            <input class="input" type="text" placeholder="Password" form="addForm" name="password"/>

        </li>
        <li class="editButtonsImage">
            <a href="/quest/admin/mentors"><img class="cancelButton" src="/static/IMAGES/cancelButton.png" alt="cancel"></a>
            <input type="image" name="confirmAddMentor" class="confirmButton" src="/static/IMAGES/tickButton.png"
                   alt="confirm" form="addForm">
        </li>
    </ul>
</div>

</body>
</html>