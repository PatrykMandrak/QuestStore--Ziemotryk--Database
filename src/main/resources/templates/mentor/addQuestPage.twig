    <link rel="stylesheet" href="/static/CSS/Mentor/addCodecoolerPage.css">
</head>
<body>



<div id="pageInfo">
    <img id="logoImage" src="/static/IMAGES/logoCodecool.jpg" width="70" height="70">
    <nav role='navigation'>
        <div id="menuToggle">

            <input type="checkbox" />

            <span></span>
            <span></span>
            <span></span>

            <ul id="menu">
                <a href="/quest/mentor/index">
                    <li>Home</li>
                </a>
                <a href="/quest/mentor/codecoolers">
                    <li>Codecoolers</li>
                </a>
                <a href="/quest/mentor/quests">
                    <li>Quests</li>
                </a>
                <a href="/quest/mentor/artifacts">
                    <li>Artifacts</li>
                </a>
                <a href="/quest/mentor/transactions">
                    <li>Transactions history</li>
                </a>
                <a href="/quest/mentor/pendingArtifacts">
                    <li>Pending Artifact Usage</li>
                </a>
                <a href="/quest/mentor/logout">
                    <li>Log out</li>
                </a>
            </ul>
        </div>
    </nav>
</div>

<div id="pageInfo">
    <a href="/quest/mentor/index"><img id="logoImage" src="/static/IMAGES/logoCodecool.jpg" width="70" height="70"></a>
</div>

<div class="container">
    <<form id="addForm" method="POST" action="/quest/mentor/addQuest"></form>
        <ul class="item">
            <li class="avatarImage">
                <img class="avatar" src="#" alt="Quest image">
            </li>
            <li class="questName">
                <input class="input" type="text" placeholder="Quest name" form="addForm" name="questName"/>
            </li>
            <p class="heading">Quest Category:</p>
            <li class="categoryName">
                <input class="input" type="text" placeholder="Category name" form="addForm" name="categoryName"/>
            </li>
            <p class="heading">Decription:</p>
            <li class="decription">
                <input class="input" type="text" placeholder="Decription" form="addForm" name="description"/>
            </li>
            <p class="heading">Value:</p>
            <li class="questValue">
                <input class="input" type="text" placeholder="Quest value" form="addForm" name="questValue"/>
            </li>
            <li class="editButtonsImage">
                <a href="/quest/mentor/quests"><img class="cancelButton" src="/static/IMAGES/cancelButton.png"
                                                       alt="cancel"></a>
                <input type="image" name="confirmAddQuest" class="confirmButton" src="/static/IMAGES/tickButton.png"
                       alt="confirm" form="addForm">
            </li>
        </ul>
    </form>
</div>

</body>
</html>