<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit codecooler</title>
    <link rel="stylesheet" href="/static/CSS/flexboxStyle.css">
    <link rel="stylesheet" href="/static/CSS/IndexPageStyle.css">
    <link rel="stylesheet" href="/static/CSS/Mentor/addCodecoolerPage.css">
</head>
<body>


<div id="pageInfo">
    <img id="logoImage" src="/static/IMAGES/logoCodecool.jpg" width="70" height="70">
    <nav role='navigation'>
        <div id="menuToggle">

            <input type="checkbox"/>

            <span></span>
            <span></span>
            <span></span>

            <ul id="menu">
                <a href="/quest/mentor/index">
                    <li>Home</li>
                </a>
                <a href="/quest/mentor/codecoolers">
                    <li>Codecoolers</li>
                </a>
                <a href="/quest/mentor/quests">
                    <li>Quests</li>
                </a>
                <a href="/quest/mentor/artifacts">
                    <li>Artifacts</li>
                </a>
                <a href="/quest/mentor/transactions">
                    <li>Transactions history</li>
                </a>
                <a href="/quest/mentor/pendingArtifacts">
                    <li>Pending Artifact Usage</li>
                </a>
                <a href="/quest/mentor/logout">
                    <li>Log out</li>
                </a>
            </ul>
        </div>
    </nav>
</div>

<div id="pageInfo">
    <a href="/quest/mentor/index"><img id="logoImage" src="/static/IMAGES/logoCodecool.jpg" width="70" height="70"></a>
</div>

<div class="container">
    {% for codecooler in list %}
        <form id="updateForm" method="POST"
              action="/quest/mentor/updateCodecooler/{{ codecooler.getAccountId() }}"></form>
        <form id="deleteForm" method="POST"
              action="/quest/mentor/deleteCodecooler/{{ codecooler.getAccountId() }}"></form>
        <ul class="item">
            <li class="avatarImage">
                <img class="avatar" src="/static/IMAGES/leniartekStudent.png" alt="Leniartek">
            </li>
            <li class="fullName">
                <input class="input" type="text" placeholder="Full name" value="{{ codecooler.getFullName() }}"
                       form="updateForm" name="fullName"/>

            </li>
            <p class="heading">E-mail:</p>
            <li class="email">
                <input class="input" type="text" placeholder="E-mail" value="{{ codecooler.getEmail() }}"
                       form="updateForm" name="email"/>
            </li>
            <p class="heading">Class:</p>
            <li class="assignedClass">
                <input class="input" type="text" placeholder="Assigned class" value="{{ codecooler.getClassName() }}"
                       form="updateForm" name="assignedClass"/>
            </li>
            <li class="editButtonsImage">
                <input type="image" name="deleteCodecooler" class="deleteButton" src="/static/IMAGES/deleteButton.png"
                       form="deleteForm">
                <a href="/quest/mentor/codecoolers"><img class="cancelButton" src="/static/IMAGES/cancelButton.png"
                                                         alt="cancel"></a>
                <input type="image" name="confirmEditCodecooler" class="confirmButton"
                       src="/static/IMAGES/tickButton.png"
                       form="updateForm">
            </li>
        </ul>
    {% endfor %}
</div>

</body>
</html>