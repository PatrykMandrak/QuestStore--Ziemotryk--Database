<div id="pageInfo">
    <a href="/quest/mentor/index"><img id="logoImage" src="/static/IMAGES/logoCodecool.jpg" width="70" height="70"></a>
</div>

<div class="container">
    <form id="addForm" method="POST" action="/quest/mentor/addArtifact"></form>
    <ul class="item">
        <li class="avatarImage">
            <img class="avatar" src="../../IMAGES/leniartekStudent.png" alt="Leniartek">
        </li>
        <li class="fullName">
            <input class="input" type="text" placeholder="Full name" form="addForm" name="fullName"/>

        </li>
        <p class="heading">E-mail:</p>
        <li class="email">
            <input class="input" type="text" placeholder="E-mail" form="addForm" name="email"/>
        </li>
        <p class="heading">Class:</p>
        <li class="assignedClass">
            <input class="input" type="text" placeholder="Assigned class" form="addForm" name="assignedClass"/>
        </li>
        <li class="editButtonsImage">
            <a href="/quest/mentor/codecoolers"><img class="cancelButton" src="/static/IMAGES/cancelButton.png"
                                                     alt="cancel"></a>
            <input type="image" name="confirmAddCodecooler" class="confirmButton" src="/static/IMAGES/tickButton.png"
                   alt="confirm" form="addForm">
        </li>
    </ul>
</div>

